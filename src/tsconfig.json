{
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "compiler": "typescript"
  },
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["src/*"],
      "@uploads/*": ["src/uploads/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@classes/*": ["src/classes/*"],
      "@tests/*": ["./__tests__/*"]
    },
    "module": "CommonJS",
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "build"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "__tests__/serialPatterns.test.ts"
  ]
}
