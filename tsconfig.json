{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@helpers/*": ["src/helpers/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@tests/*": ["__tests__/*"]
    },
    "module": "commonjs",
    "target": "ES6",
    "declaration": true,
    "esModuleInterop": true,
    "rootDir": "./",
    "outDir": "./build",
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
