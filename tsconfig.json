{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["./src/*"],
      "@uploads/*": ["./src/uploads/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@classes/*": ["./src/classes/*"],
      "@tests/*": ["__tests__/*"]
    },
    "module": "commonjs",
    "target": "ES6",
    "declaration": true,
    "esModuleInterop": true,
    "rootDir": "./",
    "outDir": "./build",
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
