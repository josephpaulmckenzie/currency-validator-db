{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["src/*"],
      "@uploads/*": ["src/uploads/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@classes/*": ["src/classes/*"],
      "@tests/*": ["__tests__/*"]
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "rootDir": "./",
    "outDir": "./build",
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts"
, "__tests__/serialPatterns.tes.tsw"  ]
}
